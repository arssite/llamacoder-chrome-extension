{
  "manifest_version": 3,
  "name": "LlamaCoder Helper",
  "version": "1.0",
  "description": "Integrates LlamaCoder for coding suggestions and debugging.",
  "permissions": ["activeTab", "storage", "scripting"],
  "background": {
    "service_worker": "/src/background.js"
  },
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "host_permissions": ["<all_urls>"]
}
